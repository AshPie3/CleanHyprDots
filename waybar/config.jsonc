{
    "layer": "top",
    "height": 10,
    "modules-left": ["custom/menu", "hyprland/workspaces", "mpris"],
    "modules-center": ["clock", "custom/weather"],
    "modules-right": [ "group/settings"],
    "sway/window": {
        "max-length": 50
    },

    "custom/menu": {
        "format": "<span size='18pt'>ÔåÉ</span>",
        "on-click": "wlogout",
    
        "escape": true
    },

    
    "hyprland/workspaces": {
	"format": "{id}",
    "on-click": "activate",
    "cursor": "pointer",
       "persistent-workspaces": {
             "*": 5, // 5 workspaces by default on every monitor
             "HDMI-A-1": 3 // but only three on HDMI-A-1
       }
    },

    "mpris": {
	"format": "{player_icon} {title} - {artist}",
	"format-paused": "{status_icon} {title} - {artist}",
    "max-length": 45,
	"player-icons": {
		"default": "<span size='12pt'>‚ñ∂</span>",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "<span size='12pt'>‚è∏</span>"
	},
	"ignored-players": ["firefox", "chromium"]
    },

    "clock": {
        // "format": "ÔÄó {:%H:%M}",
        "format": "ÔÄó  {:%R | %D}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "tz_up",
            "on-scroll-down": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "custom/weather": {
        "exec": "python /home/ashipie/.config/waybar/scripts/weather.py waybar",
        "restart-interval": 900,
        "return-type": "json",
    },

    "group/audio":{
        "orientation": "horizontal",

        "drawer": {
            "transition-duration": 500,
            
            "transition-left-to-right": false,
        },
        "modules": [
            "pulseaudio",
            "pulseaudio/slider",
        ]
    },

    
    "pulseaudio": {
        "format": "<span size='12pt'>{icon}</span>",
        "format-bluetooth": "{icon}Ôäî",
        "format-muted": "<span size='12pt'>Óª®</span>",
        "format-icons": {
            "alsa_output.pci-0000_00_1f.3.analog-stereo": "Óå≠",
            "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "Óª®Óå≠",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": [
            "Easy Effects Sink"
        ]
    },

    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },

    "group/settings": {
         "orientation": "horizontal",
         "modules": [
            "custom/niflveil",
            "group/audio",
            "custom/notification",
            "bluetooth",
            "network",
        ]
    },

    "network": {
        "interface": "wlo1",
        "interface": "enp38s0",
        "format": "<span size='10pt'>Ôá´</span>", //"{ifname}",
        
        //"format-ethernet": "{ipaddr}/{cidr} Û∞äó",
        //"format-disconnected": "", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "nm-connection-editor"
        
    },

    "custom/notification": {
        "tooltip": true,
        "format": "<span size='12pt'>ÔÇ¢</span>",

        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        
        "escape": true
    },

    "bluetooth": {
        // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
        "format": "<span size='12pt'>Ôäî</span>",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": "Ôäî {num_connections} connected",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueman-manager"
    },

    "custom/niflveil": {
        "format": "{}",
        "exec": "niflveil show",
        "on-click": "niflveil restore",
        "return-type": "json",
        "interval": "once",
        "signal": 8
    }   
     
}